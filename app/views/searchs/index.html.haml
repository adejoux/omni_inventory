%br
.row
  .form-group
    = form_tag searchs_path,class: "form-inline", method: :get do
      .col-md-6.col-md-offset-4
        = text_field_tag :query, params[:query], class: "form-control input-lg" 
        = button_tag class: "btn btn-default btn-lg", type: 'submit', name: nil do
          %span.glyphicon.glyphicon-search
%br
- unless @response.blank?
  .row
    .col-md-8.col-md-offset-1
      %p.small
        = "The request returned #{@response.hits.total} results (#{@response.took.to_f / 1000} seconds)"
  = @response.inspect
  - @response.hits.hits.each do |doc|

    .row
      .col-md-8.col-md-offset-1
        - doc.highlight.each do |high|
          =link_to "#{high.first} #{high[1].first}", document_path(doc._id)
        .description
          = "category: #{doc['_index']} type: #{doc['_type']}"




